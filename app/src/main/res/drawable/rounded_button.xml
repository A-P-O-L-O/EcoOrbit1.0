<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Color de fondo blanco -->
            <solid android:color="@color/font_primary" />

            <!-- Bordes redondeados -->
            <corners android:radius="25dp" />

            <!-- Borde oscuro -->
            <stroke android:width="2dp" android:color="@color/negro" />

            <!-- Margen interno -->
            <padding android:left="16dp"
                android:top="12dp"
                android:right="16dp"
                android:bottom="12dp"/>
        </shape>
    </item>
</selector>
